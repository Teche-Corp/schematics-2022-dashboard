{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./components/*"],
      "@/pages/*": ["./pages/*"],
      "@/contexts/*": ["./contexts/*"],
      "@/routes/*": ["./routes/*"],
      "@/layout/*": ["./layout/*"],
      "@/lib/*": ["./lib/*"]
    }
  },
  "typeAcquisition": {
    "exclude": ["dotenv"]
  },
  "exclude": ["node_modules", "build"]
}
